<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
<!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>Weather & News</title>
  </head>
  <body>

    <div class="container mt-5">
      <h1 class="title">Weather Forecast & Top News Stories</h1>
    </div>

    <div class="jumbotron weather_jumbo">
        <div class="container-fluid">
            <h3 class="weather_jumbo">Kellogg Global Hub Weather</h3>
            <hr class="my-4">
            <div class="row">
                <div class="col-sm-6">
                    <h4 class="current">Current:</h4>
                    <h5>
                        <%= @forecast["current"]["temp"].round(0) %> <sup>o</sup>F
                    </h5>
                    <h5>
                       <%= @forecast["current"]["weather"][0]["main"] %>
                    </h5>
                    
                </div>
                <div class="col-sm-6">
                    <% if @forecast["current"]["weather"][0]["main"] == "Clear" %>
                        <img src="http://openweathermap.org/img/wn/01d@2x.png">
                    <% elsif @forecast["current"]["weather"][0]["main"] == "Rain" %>
                        <img src="http://openweathermap.org/img/wn/10d@2x.png">
                    <% elsif @forecast["current"]["weather"][0]["main"] == "Clouds" %>
                        <img src="http://openweathermap.org/img/wn/04d@2x.png">
                    <% elsif @forecast["current"]["weather"][0]["main"] == "Snow" %>
                        <img src="http://openweathermap.org/img/wn/13d@2x.png">
                    <% elsif @forecast["current"]["weather"][0]["main"] == "Drizzle" %>
                        <img src="http://openweathermap.org/img/wn/09d@2x.png">
                    <% elsif @forecast["current"]["weather"][0]["main"] == "Thunderstorm" %>
                        <img src="http://openweathermap.org/img/wn/11d@2x.png">
                    <% else %>
                        <img src="http://openweathermap.org/img/wn/50d@2x.png">
                    <% end %>
                </div>
            </div>
            <hr class="my-4">
            <h4>7-Day Forecast</h4>
            <div class="row">
                <% for day in @forecast["daily"] %>
                    <div class="col-sm">
                    <h5 class="wf-icons"><%= day["weather"][0]["main"] %></h5>
                        <% if day["weather"][0]["main"] == "Clear" %>
                            <img src="http://openweathermap.org/img/wn/01d@2x.png">
                        <% elsif day["weather"][0]["main"] == "Rain" %>
                            <img src="http://openweathermap.org/img/wn/10d@2x.png">
                        <% elsif day["weather"][0]["main"] == "Clouds" %>
                            <img src="http://openweathermap.org/img/wn/04d@2x.png">
                        <% elsif day["weather"][0]["main"] == "Snow" %>
                            <img src="http://openweathermap.org/img/wn/13d@2x.png">
                        <% elsif day["weather"][0]["main"] == "Drizzle" %>
                            <img src="http://openweathermap.org/img/wn/09d@2x.png">
                        <% elsif day["weather"][0]["main"] == "Thunderstorm" %>
                            <img src="http://openweathermap.org/img/wn/11d@2x.png">
                        <% else %>
                            <img src="http://openweathermap.org/img/wn/50d@2x.png">
                        <% end %>
                        <p class="wf-max"><strong>H <%= day["temp"]["max"].round(0) %> <sup>o</sup>F</strong></p>
                        <p class="wf-min">L <%= day["temp"]["min"].round(0) %> <sup>o</sup>F</p>                   
                        
                    </div>
                <% end %>
            </div>
        </div>
    </div>

    <div class="container mt-5">
      <h2 class="title">Click to Read Today's Top News Stories</h2>
    </div>

<% for news in @news["articles"] %>    
<div class="list-group">
<div class="container">
  <a href="<%= news["url"] %> class="list-group-item active">
    <h6><%= news["title"] %></h6>
  </a>
  </div>
</div>
<% end %>

</body>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>